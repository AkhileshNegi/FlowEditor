{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es5",
    "allowJs": true,
    "watch": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts*"
  ]
}

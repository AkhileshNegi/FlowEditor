{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "watch": true,
    "alwaysStrict": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["node_modules", "__mocks__", "./src/**/*.test.ts*"]
}

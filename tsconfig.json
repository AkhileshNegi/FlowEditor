{
  "compilerOptions": {
    "watch": false,
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "lib": ["es6", "dom"]
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["node_modules", "__mocks__", "./src/testUtils", "./src/**/*.test.ts*"]
}
